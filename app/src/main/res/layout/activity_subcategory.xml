<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/category_activity_relativelayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#FF8462"
                android:layout_marginBottom="8dp">
                <TextView
                    android:id="@+id/bt_subcategory_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/fanhui"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:textSize="18sp"
                    android:text="食品详细信息"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_activity_relativelayout"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/category_activity_listview1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:divider="#00000000"
                android:dividerHeight="12dp"
                android:listSelector="#00000000"

                />

            <ListView
                android:id="@+id/category_activity_listview2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="#FFFFF0"
                android:divider="@drawable/divider"
                android:dividerHeight="14dp"

                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>