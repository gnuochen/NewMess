<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.r_time_run.newmess.subactivity.News_Activity">

    <LinearLayout
        android:id="@+id/ll_newsactivity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF8462">
        <TextView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/fanhui"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:text="每日趣闻"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_news"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/ll_newsactivity">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33000000"
        android:orientation="vertical"
        android:layout_alignBottom="@id/vp_news">

        <TextView
            android:id="@+id/tv_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="食堂美味又添新成员"
            android:textColor="#ffffff"
            android:textSize="18sp"/>
        <LinearLayout
            android:id="@+id/ll_pointgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:src="@drawable/news_listview_item"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"/>
</RelativeLayout>
