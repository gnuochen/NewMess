<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/top_menu_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/ll_baby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.r_time_run.newmess.view.HackyViewPager
                android:id="@+id/iv_baby"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="#00000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="1"-->
                        <!--android:gravity="center_vertical|left"-->
                        <!--android:paddingLeft="10dp"-->
                        <!--android:text="配料详情"-->
                        <!--android:textColor="#000000"-->
                        <!--android:textSize="20sp" />-->

                    <TextView
                        android:id="@+id/tv_babyactivity_foodname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="酸菜肉丝饭"
                        android:layout_marginLeft="20dp"
                        android:textColor="#000000"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tv_babyactivity_foodprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="￥10"
                        android:textColor="#CC3366"
                        android:textSize="20sp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignLeft="@+id/tv_babyactivity_foodname"
                        android:layout_alignStart="@+id/tv_babyactivity_foodname" />
                    <TextView
                        android:id="@+id/tv_babyactivity_foodlocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="第一食堂潮汕小炒"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/tv_babyactivity_foodprice"
                        android:layout_toEndOf="@+id/tv_babyactivity_foodprice" />
                    <ImageView
                        android:id="@+id/iv_baby_collection"
                        android:layout_alignParentRight="true"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/second_2" />
                </RelativeLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#CCCCCC" />

                <!--<ImageView-->
                    <!--android:id="@+id/iv_baby_collection"-->
                    <!--android:layout_width="60dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:src="@drawable/second_2" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

            -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="配料:" />

                <TextView
                    android:id="@+id/tv_food_ingredient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="酸菜，精选猪肉，泰国大米，食用盐，花生油，老陈醋，淀粉，各类贡丸等" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搭配推荐："
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/im_tuijian1"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/kele" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="＋"
                    android:textSize="50sp" />

                <ImageView
                    android:id="@+id/im_tuijian2"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/suancairousifan" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#CCCCCC" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="食品评价"
                android:textColor="#000000"
                android:textSize="18sp" />

            <com.r_time_run.newmess.view.MyListView
                android:id="@+id/listView_Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"></com.r_time_run.newmess.view.MyListView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/buy_now"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/changepass_button"
            android:gravity="center"
            android:text="打包" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/all_choice_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:orientation="horizontal"
        android:visibility="gone">

    </LinearLayout>

</RelativeLayout>


