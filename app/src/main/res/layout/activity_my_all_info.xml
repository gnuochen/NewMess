<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF8462"
        android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/bt_allinfo_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/fanhui"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:text="我的详细信息"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:background="#90CCCCCC"
        android:text="修改信息请按编辑按钮"
        android:textSize="14sp"
        android:paddingLeft="15dp"/>
    <LinearLayout
        android:id="@+id/ll_myallinfo_touxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/my_allinfo_button">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="头像"
            android:textColor="#735553"
            android:gravity="center_vertical"
            android:textSize="18sp"/>
        <com.r_time_run.newmess.utils.RoundImageView
            android:id="@+id/riv_myallinfo_touxiang"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/touxiang"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/goto_back"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#CCCCCC"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="账号："
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="#735553"/>
        <EditText
            android:id="@+id/et_myallinfo_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:text="1111111"
            android:textSize="16sp"
            android:textColor="#666666"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#CCCCCC"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="已绑定手机号："
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="#735553"/>
        <EditText
            android:id="@+id/et_myallinfo_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:text="未绑定"
            android:textSize="16sp"
            android:textColor="#666666"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#CCCCCC"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="已绑定邮箱："
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="#735553"/>
        <EditText
            android:id="@+id/et_myallinfo_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:text="未绑定"
            android:textSize="16sp"
            android:textColor="#666666"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_myallinfo_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/my_allinfo_button"
            android:text="编辑"
            android:textColor="#FF8462"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/bt_myallinfo_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@drawable/my_allinfo_button"
            android:text="完成"/>
    </LinearLayout>

</LinearLayout>
