<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NewMess"
        android:textColor="#735553"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/newmessicon2"
        android:layout_gravity="center_horizontal"/>
    <ScrollView
        android:id="@+id/registe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_registelayout"
            android:layout_marginBottom="40dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#60ffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="SIGN IN"
                android:textColor="#735553"
                android:layout_marginBottom="20dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:background="@drawable/corners"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:gravity="bottom"
                    android:background="@drawable/corners2">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/username"/>
                    <EditText
                        android:id="@+id/et_register_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:background="#FFFFFF"
                        android:textColor="#735553"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="20sp"
                        android:textColor="#c33"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="10dp"
                    android:gravity="bottom"
                    android:background="@drawable/corners2">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/userpassword"/>
                    <EditText
                        android:id="@+id/et_register_password"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:password="true"
                        android:background="#FFFFFF"
                        android:textColor="#735553"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="20sp"
                        android:textColor="#c33"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="10dp"
                    android:gravity="bottom"
                    android:background="@drawable/corners2">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/userpassword"/>
                    <EditText
                        android:id="@+id/et_register_again_password"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:password="true"
                        android:paddingLeft="10dp"
                        android:background="#FFFFFF"
                        android:textColor="#735553"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="20sp"
                        android:textColor="#c33"/>
                </TableRow>
            </TableLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUNDING"
                android:gravity="right"
                android:textColor="#735553"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="right">
                <Switch
                    android:id="@+id/sw_logintype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="商家"
                    android:textOn="学生"
                    android:textColor="#735553"
                    android:textSize="20sp"/>
            </LinearLayout>
            <!-- 学号 -->
            <LinearLayout
                android:id="@+id/ll_student_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/username2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:selectAllOnFocus="true"
                    android:text="学号："
                    android:textColor="#735553"/>
                <EditText
                    android:id="@+id/et_student_id"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:password="true"
                    android:hint="请输入学号"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="20sp"
                    android:textColor="#c33"/>
            </LinearLayout>
            <!-- 子服务器系统密码 -->
            <LinearLayout
                android:id="@+id/ll_student_subserver_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/userpassword2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码："
                    android:textColor="#735553"/>
                <EditText
                    android:id="@+id/et_student_subserver_password"
                    android:selectAllOnFocus="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:password="true"
                    android:hint="请输入子服务系统密码"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="20sp"
                    android:textColor="#c33"/>
            </LinearLayout>
            <!-- 邮箱 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/email"/>
                <EditText
                    android:id="@+id/et_email"
                    android:selectAllOnFocus="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!-- 手机 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/phone"/>
                <EditText
                    android:id="@+id/et_phone"
                    android:selectAllOnFocus="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:numeric="integer"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!-- 确认注册按钮 -->
            <Button
                android:id="@+id/bt_register_ok"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/changepass_button"
                android:text="IMMEDIATELY TO 注册"
                android:textColor="#FFFFFF"
                android:textSize="25sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>