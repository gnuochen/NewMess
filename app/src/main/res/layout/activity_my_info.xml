<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_my_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 主页面布局 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCCCCC"
            android:orientation="vertical">


            <!--
            学生：我的信息
            -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp">

                <LinearLayout
                    android:id="@+id/ll_my_info_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/wodexinxi"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="50dp">

                        <com.r_time_run.newmess.utils.RoundImageView
                            android:id="@+id/ib_myinfo_touxiang"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/touxiang" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="16dp">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="8dp"
                                android:text="小龙123"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:text="用户："
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_user_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:text="student"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/myinfo_bag_back"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="我的订单"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@drawable/myinfo_use1"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:paddingLeft="25dp">

                        <TextView
                            android:id="@+id/bt_bagOrder"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:drawableRight="@drawable/goto_back"
                            android:gravity="center_vertical"
                            android:text="订单详情"
                            android:textColor="@color/textview_button"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/bt_bagAppraise"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:drawableRight="@drawable/goto_back"
                            android:gravity="center_vertical"
                            android:text="评价订单"
                            android:textColor="@color/textview_button"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/bt_backBag"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:drawableRight="@drawable/goto_back"
                            android:gravity="center_vertical"
                            android:text="退订"
                            android:textColor="@color/textview_button"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/myinfo_bag_back"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="我的足迹"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="118dp"
                        android:background="@drawable/myinfo_use2"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:paddingLeft="25dp">

                        <TextView
                            android:id="@+id/bt_goodFood"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:drawableRight="@drawable/goto_back"
                            android:gravity="center_vertical"
                            android:text="我的推荐"
                            android:textColor="@color/textview_button"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/bt_buyedFood"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:drawableRight="@drawable/goto_back"
                            android:gravity="center_vertical"
                            android:text="我买过的"
                            android:textColor="@color/textview_button"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/myinfo_bag_back"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="设置"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@drawable/myinfo_use1"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:paddingLeft="25dp">

                        <TextView
                            android:id="@+id/bt_personInfo"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:drawableRight="@drawable/goto_back"
                            android:gravity="center_vertical"
                            android:text="个人详细信息"
                            android:textColor="@color/textview_button"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/bt_changePassword"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:drawableRight="@drawable/goto_back"
                            android:gravity="center_vertical"
                            android:text="修改密码"
                            android:textColor="@color/textview_button"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/bt_backLogin"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:drawableRight="@drawable/goto_back"
                            android:gravity="center_vertical"
                            android:text="注销账号"
                            android:textColor="@color/textview_button"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <!--
            商家：我的信息
            -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp">

                <LinearLayout
                    android:id="@+id/ll_my_info_shangjia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!-- 主页面布局 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/wodexinxi"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <com.r_time_run.newmess.utils.RoundImageView
                                android:id="@+id/ib_myinfo_business_touxiang"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/business_touxiang" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_business_dianpu"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingTop="15dp"
                                        android:text="店铺："
                                        android:textColor="#FFFFFF"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/tv_business_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingTop="15dp"
                                        android:text="西北拉面"
                                        android:textColor="#FFFFFF"
                                        android:textSize="18sp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/im_business_hengxian"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:src="@drawable/business_hengxian" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/tv_business_yonghu"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:paddingTop="10dp"
                                            android:text="今日订数："
                                            android:textColor="#FFFFFF"
                                            android:textSize="19sp" />

                                        <TextView
                                            android:id="@+id/tv_business_dingshu"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignBottom="@id/tv_business_yonghu"
                                            android:layout_centerVertical="true"
                                            android:layout_toEndOf="@+id/tv_business_yonghu"
                                            android:layout_toRightOf="@+id/tv_business_yonghu"
                                            android:text="95"
                                            android:textColor="#FFFFFF"
                                            android:textSize="19sp" />

                                        <TextView
                                            android:id="@+id/tv_business_jingrishoue"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/tv_business_yonghu"
                                            android:paddingTop="10dp"
                                            android:text="今日售额："
                                            android:textColor="#FFFFFF"
                                            android:textSize="19sp" />

                                        <TextView
                                            android:id="@+id/tv_business_shoue"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignBottom="@id/tv_business_jingrishoue"
                                            android:layout_centerVertical="true"
                                            android:layout_toEndOf="@+id/tv_business_jingrishoue"
                                            android:layout_toRightOf="@+id/tv_business_jingrishoue"
                                            android:text="10"
                                            android:textColor="#FFFFFF"
                                            android:textSize="19sp" />
                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>
                        <!--
                        shangjia：我的信息
                        -->
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="0dp">

                            <LinearLayout
                                android:id="@+id/ll_my_info_business_sales"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#CCCCCC"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/myinfo_bag_back"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:text="我的订单"
                                    android:textColor="#666666"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:background="@drawable/myinfo_use1"
                                    android:gravity="left"
                                    android:orientation="vertical"
                                    android:paddingLeft="25dp">

                                    <TextView
                                        android:id="@+id/bt_business_bagOrder"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:drawableRight="@drawable/goto_back"
                                        android:gravity="center_vertical"
                                        android:text="新订单"
                                        android:textColor="@color/textview_button"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/bt_business_bagAppraise"
                                        android:layout_width="match_parent"
                                        android:layout_height="54dp"
                                        android:drawableRight="@drawable/goto_back"
                                        android:gravity="center_vertical"
                                        android:text="已处理订单"
                                        android:textColor="@color/textview_button"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/bt_business_backBag"
                                        android:layout_width="match_parent"
                                        android:layout_height="52dp"
                                        android:drawableRight="@drawable/goto_back"
                                        android:gravity="center_vertical"
                                        android:text="评价订单"
                                        android:textColor="@color/textview_button"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/myinfo_bag_back"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:text="我的店铺"
                                    android:textColor="#666666"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:background="@drawable/myinfo_use2"
                                    android:gravity="left"
                                    android:orientation="vertical"
                                    android:paddingLeft="25dp">

                                    <TextView
                                        android:id="@+id/bt_business_goodFood"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:drawableRight="@drawable/goto_back"
                                        android:gravity="center_vertical"
                                        android:text="菜品管理"
                                        android:textColor="@color/textview_button"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/bt_business_buyedFood"
                                        android:layout_width="match_parent"
                                        android:layout_height="54dp"
                                        android:drawableRight="@drawable/goto_back"
                                        android:gravity="center_vertical"
                                        android:text="新品发布"
                                        android:textColor="@color/textview_button"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/myinfo_bag_back"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:text="设置"
                                    android:textColor="#666666"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:background="@drawable/myinfo_use1"
                                    android:gravity="left"
                                    android:orientation="vertical"
                                    android:paddingLeft="25dp">

                                    <TextView
                                        android:id="@+id/bt_business_personInfo"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:drawableRight="@drawable/goto_back"
                                        android:gravity="center_vertical"
                                        android:text="个人详细信息"
                                        android:textColor="@color/textview_button"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/bt_business_changePassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="54dp"
                                        android:drawableRight="@drawable/goto_back"
                                        android:gravity="center_vertical"
                                        android:text="修改密码"
                                        android:textColor="@color/textview_button"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/bt_business_backLogin"
                                        android:layout_width="match_parent"
                                        android:layout_height="52dp"
                                        android:drawableRight="@drawable/goto_back"
                                        android:gravity="center_vertical"
                                        android:text="注销账号"
                                        android:textColor="@color/textview_button"
                                        android:textSize="16sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </ScrollView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


        <!-- 抽屉菜单 -->
        <LinearLayout
            android:id="@+id/right_drawer"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#FFFFFF">
            <!-- 登录 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NewMess"
                        android:textColor="#CCCCCC"
                        android:textSize="10sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/newmessicon" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/corners"
                        android:stretchColumns="1">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/corners2"
                            android:gravity="center_vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/username" />

                            <EditText
                                android:id="@+id/et_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:background="#FFFFFF"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                android:textSize="16sp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/corners2"
                            android:gravity="center_vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/userpassword" />

                            <EditText
                                android:id="@+id/et_user_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:background="#FFFFFF"
                                android:gravity="center_vertical"
                                android:password="true"
                                android:textColor="#000000"
                                android:textSize="16sp" />
                        </TableRow>
                    </TableLayout>
                    <LinearLayout
                        android:id="@+id/ll_login_content"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="vertical">
                        <!-- 是否记住密码 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:gravity="right">
                            <com.rey.material.widget.CheckBox
                                style="@style/Material.Drawable.CheckBox"
                                android:id="@+id/cb_remory_user_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="记住密码"
                                android:textColor="#735553"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">
                            <!-- 登陆按钮 -->
                            <Button
                                android:id="@+id/bt_user_login"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/changepass_button"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:text="登陆"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp" />
                            <!-- 注册按钮 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal|bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="还没有账号？"
                                    android:textColor="#B7AAA8"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/bt_user_registe"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="立即注册 >"
                                    android:textColor="@color/registe_button"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_wait_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <View
                                android:id="@+id/v_left"
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="3"
                                android:background="#ffff7b16"/>
                            <Button
                                android:id="@+id/bt_login_text"
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="40dp"
                                android:text="正在登陆..."
                                android:gravity="center"
                                android:textColor="#ffffff"
                                android:background="#ffff7b16"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="3"
                                android:background="#ffff7b16"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center">
                            <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
                                android:id="@+id/pb_wait_login"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="#ffff7b16" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </android.support.v4.widget.DrawerLayout>

</LinearLayout>