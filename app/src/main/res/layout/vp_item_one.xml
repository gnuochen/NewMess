<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/food_header_return"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@drawable/first_yuefanlianmeng">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/tb_icon_actionbar_back"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            />
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="搭配推荐"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/goodfood_fromall"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="fill_parent"
                android:height="35dp"
                android:gravity="center"
                android:text="综合"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_height="fill_parent"
                android:background="#10444444"/>
            <View
                android:id="@+id/shop_show_2"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#fa8a4b"/>
        </LinearLayout>
        <TextView
            android:layout_width="2dp"
            android:layout_height="fill_parent" />
        <LinearLayout
            android:id="@+id/goodfood_fromtuijian"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="fill_parent"
                android:height="35dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="推荐度"
                android:textStyle="bold"
                android:layout_height="fill_parent"
                android:background="#10444444"/>
            <View
                android:visibility="invisible"
                android:id="@+id/shop_show_3"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#fa8a4b"/>
        </LinearLayout>

    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshGridView xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_grid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnWidth="100dp"
        android:gravity="center_horizontal"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrHeaderBackground="@drawable/main_1"
        ptr:ptrHeaderSubTextColor="#66000000"
        ptr:ptrHeaderTextColor="#66000000"
        ptr:ptrListViewExtrasEnabled="false"
        ptr:ptrMode="both"
        ptr:ptrRefreshableViewBackground="#04ff0000"
        ptr:ptrScrollingWhileRefreshingEnabled="true"
        ptr:ptrShowIndicator="true" />
</LinearLayout>