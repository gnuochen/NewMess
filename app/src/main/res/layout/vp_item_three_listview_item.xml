<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shop_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:src="@drawable/no_image"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="23dp"

                android:text="西北拉面"

                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/takeout_ic_auto_locate"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="第一饭堂" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="销量" />
                <TextView
                    android:id="@+id/tv_shop_decribe"
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="0" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/takeout_ic_actionbar_uncollect"/>
                <TextView
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="960" />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/takeout_ic_talk"/>
                <TextView
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="380" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_shop_into"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/cute_boy_03"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#44000000"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        >

        <ImageView
            android:id="@+id/shop_image1"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:src="@drawable/cute_boy_04" />

        <ImageView
            android:id="@+id/shop_image2"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:src="@drawable/cute_boy_01" />

        <ImageView
            android:id="@+id/shop_image3"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:src="@drawable/cute_boy_02" />

        <ImageView
            android:id="@+id/shop_image4"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:src="@drawable/cute_boy_07" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#44000000"
        />
    <TextView
        android:layout_width="fill_parent"
        android:text="其他相似店铺"
        android:textColor="#44000000"
        android:layout_height="35dp"
        android:gravity="center"/>
</LinearLayout>