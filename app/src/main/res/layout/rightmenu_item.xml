<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rightmenu_item_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"

        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/rightmenu_item_textview1"
        android:layout_height="30dp"
        android:layout_alignTop="@id/rightmenu_item_imageview"
        android:layout_toRightOf="@id/rightmenu_item_imageview"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:paddingLeft="10dp"
        android:text="111" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/rightmenu_item_textview2"
        android:layout_alignBottom="@id/rightmenu_item_imageview"
        android:layout_toRightOf="@id/rightmenu_item_imageview"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:text="222" />

</RelativeLayout>
