<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>
    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="anim_popupwindow">
        <item name="android:windowEnterAnimation">@anim/my_info_in</item>
        <item name="android:windowExitAnimation">@anim/my_info_out</item>
    </style>
    <style name="popWindow_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_up_in</item>
        <item name="android:windowExitAnimation">@anim/pop_down_out</item>
    </style>
</resources>
